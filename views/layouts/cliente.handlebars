<div class="col-lg-12">
    <div class="card">
        <div class="card-header">Cadastro de Cliente</div>
        <div class="card-body card-block">
            <form action="/create" method="post">
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon">Nome</div>
                        <input type="text" id="nome" 
                        name="nome" 
                        class="form-control" maxlength="30" required>
                        <div class="input-group-addon"><i class="fa fa-user"></i></div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon">CPF</div>
                        <input type="text" 
                        id="cpf" name="cpf"
                        class="form-control" required>
                        <div class="input-group-addon"><i class="fa fa-plus"></i></div>
                    </div>
                </div>
                <div class="form-actions form-group text-right">
                    <input class="btn btn-success btn-lg" type="submit" value="Incluir">
                    <input class="btn btn-danger btn-lg" type="reset" value="Limpar">
                </div>
            </form>
        </div>
    </div>
</div>

<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Usuarios</strong>
                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table" class="table table-striped table-bordered">
                            <thead>
                                <tr style="text-align: center">
                                    <th>ID</th>
                                    <th>NOME</th>
                                    <th>CPF</th>
                                    <th>Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each clientes}}
                                <tr style="text-align: center">
                                    <td>{{id}}</td>
                                    <td>{{nome}}</td>
                                    <td>{{cpf}}</td>
                                    <td style="text-align: center">
                                        <a href="/one/{{id}}"><button type="button" class="btn btn-outline-primary"
                                                data-toggle="modal" data-target="#largeModal"><i
                                                    class="fa fa-edit"></i>Editar</button></a>
                                        <a href="/delete/{{id}}"><button type="button"
                                                class="btn btn-outline-danger"><i
                                                    class="fa fa-trash-o"></i>Apagar</button></a>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

