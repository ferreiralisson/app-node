<div class="col-lg-12">
    <div class="card">
        <div class="card-header">Cadastro de Cliente</div>
        <div class="card-body card-block">
            <form action="/pedido/create" method="post" class="">
                <div class="form-group">
                    <div class="row form-group">
                         <div class="col-12 col-md-12">
                            <select name="cliente" id="cliente" class="form-control" required>
                                <option value="">Selecione um cliente</option>
                                {{#each clientes}}
                                <option value="{{id}}">{{nome}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-12 col-md-12">
                            <select name="produto" id="produto" class="form-control" required>
                                <option value="">Selecione um Produto</option>
                               {{#each produtos}}
                                <option value="{{id}}">{{descricao}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon">Quantidade</div>
                            <input type="text" id="qtd_produto" name="qtd_produto" class="form-control" required>
                            <div class="input-group-addon"><i class="fa fa-plus-square"></i></div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon">Valor Total</div>
                            <input type="text" id="valor_total" name="valor_total" class="form-control" required>
                            <div class="input-group-addon"><i class="fa fa-money"></i></div>
                        </div>
                    </div>
                    <div class="form-actions form-group text-right">
                        <input class="btn btn-success btn-lg" type="submit" value="Incluir">
                    <input class="btn btn-danger btn-lg" type="reset" value="Limpar">
                    </div>
            </form>
        </div>
    </div>
</div>

<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Pedidos</strong>
                    </div>
                    <div class="card-body">
                         <table id="bootstrap-data-table" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Cliente</th>
                                    <th>Produto</th>
                                    <th>Quantidade</th>
                                    <th>Valor Total</th>
                                    <th>Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each pedidos}}
                                <tr>
                                    <td>{{id}}</td>
                                    <td>{{nome}}</td>
                                    <td>{{descricao}}</td>
                                    <td>{{qtdProduto}}</td>
                                    <td>{{valorTotal}}</td>
                                     <td style="text-align: center">
                                        <a href="/pedido/delete/{{id}}"><button type="button"
                                                class="btn btn-outline-danger"><i
                                                    class="fa fa-trash-o"></i>Apagar</button></a>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table> 
                    </div>
                </div>
            </div>


        </div>
    </div>
</div>