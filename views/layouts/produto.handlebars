<div class="col-lg-12">
    <div class="card">
        <div class="card-header">Cadastro de Produto</div>
        <div class="card-body card-block">
            <form action="/produto/create" method="post" class="">
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon">Descrição</div>
                        <input type="text" id="descricao" name="descricao" class="form-control" required>
                        <div class="input-group-addon"><i class="fa fa-edit"></i></div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon">Valor</div>
                        <input type="text" id="valor" name="valor" class="form-control" required>
                        <div class="input-group-addon"><i class="fa fa-money"></i></div>
                    </div>
                </div>
                <div class="form-actions form-group text-right">
                    <input class="btn btn-success btn-lg" type="submit" value="Incluir">
                    <input class="btn btn-danger btn-lg" type="reset" value="Limpar">
                </div>
            </form>
        </div>
    </div>
</div>

<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Produtos</strong>
                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Descrição</th>
                                    <th>Valor</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each produtos}}
                                <tr>
                                    <td>{{descricao}}</td>
                                    <td>R$: {{valor}}</td>
                                    <td style="text-align: center">
                                        <a href="/produto/one/{{id}}"><button type="button" class="btn btn-outline-primary"><i
                                                    class="fa fa-edit"></i>Editar</button></a>
                                        <a href="/produto/delete/{{id}}"><button type="button"
                                                class="btn btn-outline-danger"><i
                                                    class="fa fa-trash-o"></i>Apagar</button></a>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>


        </div>
    </div><!-- .animated -->
</div><!-- .content -->